<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_skip_test_activity"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="test activity "
        android:gravity="center"
        android:background="#aaaaaa"
        android:textColor="#ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_skip_test_fragment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#aa77cc"
        android:text="test fragment"
        android:gravity="center"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@+id/tv_skip_test_activity"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>